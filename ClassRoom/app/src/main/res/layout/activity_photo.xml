<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Photo"
    android:background="@drawable/wooden">

    <TextView
        android:text=" My Profile"
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:textSize="30sp"
        android:textColorLink="@android:color/background_dark"
        android:textStyle="bold"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:visibility="visible"
        android:typeface="serif"
        />

    <ImageView
        app:srcCompat="@drawable/no_profile"
        android:id="@+id/buckysImageView"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp" />

    <TextView
        android:text="No Status Yet"
        android:layout_width="match_parent"
        android:id="@+id/statustextid"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textAlignment="center"
        android:layout_height="45dp"
        android:layout_below="@+id/buckysImageView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:typeface="serif"
        android:textColor="@android:color/background_dark" />

    <Button
        android:layout_marginStart="37dp"
        android:id="@+id/buckysButton"
        android:onClick="launchCamera"
        android:background="@drawable/camera_2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="13dp" />

    <Button
        android:id="@+id/crossid"
        android:background="@drawable/cross2"
        android:onClick="launchCross"
        android:layout_height="70dp"
        android:layout_marginEnd="28dp"
        android:layout_width="70dp"
        android:layout_alignTop="@+id/buckysButton"
        android:layout_alignParentEnd="true" />

</RelativeLayout>