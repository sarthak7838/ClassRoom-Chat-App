<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_emergency_numbers"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mahendergoel.navigation.emergency_numbers"
    android:background="@drawable/emergency2">

    <ImageView
        android:layout_width="match_parent"
        app:srcCompat="@drawable/emergency"
        android:id="@+id/imageView2"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="FIRE : 101"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/textView"
        android:textColor="@android:color/background_dark"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_marginTop="19dp" />

    <TextView
        android:text="WOMEN'S HELPLINE : 181"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/textView7"
        android:textColor="@android:color/background_dark"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="DISASTER MANAGEMENT:108"
        android:layout_width="match_parent"
        android:id="@+id/textView3"
        android:textColor="@android:color/background_dark"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp"
        android:layout_height="60dp" />

    <TextView
        android:text="AMBULANCE : 102"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/textView6"
        android:textColor="@android:color/background_dark"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp" />

    <TextView
        android:text="POLICE CONTROL ROOM : 100"
        android:layout_width="match_parent"
        android:id="@+id/textView5"
        android:textColor="@android:color/background_dark"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentStart="true"
        android:layout_height="60dp" />
</RelativeLayout>
